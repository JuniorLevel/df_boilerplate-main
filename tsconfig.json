{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
	},
	"include": ["**/*.ts", "**/*.tsx", "setupTests.ts", "styleguide.config.js", "jest.config.ts", "eslint.config.mjs", "webpack.config.js"],
	"exclude": ["node_modules"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
