{
	"name": "df_boilerplate-main",
	"description": "df_boilerplate main repository",
	"author": "JuniorLevel",
	"version": "1.0.0",
	"keywords": [],
	"license": "ISC",
	"homepage": "https://JuniorLevel.github.io/df_boilerplate-main",
	"scripts": {
		"start": "webpack serve --env PORT=5000 MODE=development",
		"build:dev": "webpack --env MODE=development",
		"build:prod": "webpack --env MODE=production",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"lint": "eslint . --report-unused-disable-directives --max-warnings 0 --fix",
		"format": "prettier src --write",
		"lint-staged": "yarn run lint && yarn run format && yarn run test && yarn run deploy:gh-pages",
		"styleguide": "styleguidist server",
		"styleguide:build": "styleguidist build",
		"deploy:pre": "cp -r coverage github-pages && cp -r styleguide github-pages && rm -rf styleguide && rm -rf coverage",
		"deploy:gh-pages": "yarn run styleguide:build && yarn run test:coverage && yarn run deploy:pre && gh-pages -d github-pages",
		"prepare": "husky"
	},
	"devDependencies": {
